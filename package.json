{
  "name": "wasmkit",
  "description": "Wasmkit is a development environment to compile, deploy, test, run cosmwasm contracts on different networks.",
  "repository": "https://github.com/kubiklabs/wasmkit.git",
  "author": "https://github.com/coco-sha",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=14.11.0",
    "yarn": ">=1.22.4"
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "watch": "tsc --build --watch packages/wasmkit",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces -p run lint",
    "lint:fix": "yarn workspaces -p run lint:fix",
    "coverage": "yarn workspaces -p run coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-sonarjs": "^0.7.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.2.12",
    "mocha": "^8.1.1",
    "ts-node": "^9.1.1"
  },
  "lint-staged": {
    "**/{src,test}/**/*.ts": [
      "eslint --format stylish --fix"
    ]
  }
}